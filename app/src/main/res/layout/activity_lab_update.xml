<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".labUpdate">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#151F55">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100px"
                android:background="#FFC107"
                android:paddingLeft="50px"
                android:paddingTop="50px"
                android:paddingRight="50px"
                android:paddingBottom="50px"
                android:text="Update Labs"
                android:textAlignment="center"
                android:textColor="#151F55"
                android:textSize="34sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/lab1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="50px"
                android:background="@color/white"
                android:ems="10"
                android:hint="Lab 1"
                android:inputType="number"
                android:paddingStart="50px" />

            <EditText
                android:id="@+id/lab2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="50px"
                android:background="@color/white"
                android:ems="10"
                android:hint="Lab 2"
                android:inputType="number"
                android:paddingStart="50px"/>

            <EditText
                android:id="@+id/lab3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="50px"
                android:background="@color/white"
                android:ems="10"
                android:hint="Lab 3"
                android:inputType="number"
                android:paddingStart="50px"/>

            <EditText
                android:id="@+id/lab4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="50px"
                android:background="@color/white"
                android:ems="10"
                android:hint="Lab 4"
                android:inputType="number"
                android:paddingStart="50px"/>

            <EditText
                android:id="@+id/lab5"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="100px"
                android:background="@color/white"
                android:ems="10"
                android:hint="Lab 5"
                android:inputType="number"
                android:paddingStart="50px" />

            <Button
                android:id="@+id/updateStudentLabs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:layout_marginBottom="100px"
                android:backgroundTint="#FFC107"
                android:paddingLeft="100px"
                android:paddingTop="50px"
                android:paddingRight="100px"
                android:paddingBottom="50px"
                android:text="Update Lab Scores"
                android:textColor="#151F55"
                android:textSize="16sp"
                app:cornerRadius="30px" />

            <Button
                android:id="@+id/goBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="100px"
                android:backgroundTint="#FFC107"
                android:paddingLeft="100px"
                android:paddingTop="50px"
                android:paddingRight="100px"
                android:paddingBottom="50px"
                android:text="Back to Update Page"
                android:textColor="#151F55"
                android:textSize="16sp"
                app:cornerRadius="30px" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFC107"
                android:paddingBottom="350px" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>